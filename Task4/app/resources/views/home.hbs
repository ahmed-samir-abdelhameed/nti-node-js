{{>header}}
{{>navbar}}
<section class="container">
    <h3 class="text-center text-primary mt-5">add user</h3>
 <table class="table table-stripped">
            {{#if show}}
            <thead>
            <th>id</th>
            <th>firstName</th>
            <th>lastName</th>
            <th>email</th>
            <th>actions</th>
        </thead>
        <tbody>
            {{#each data}}
            <tr>
                <td>{{this.id}}</td>
                <td>{{this.first_name}}</td>
                <td>{{this.last_name}}</td>
                <td>{{this.email}}</td>

                <td>
                    <a href="/user/{{this.id}}" class="btn btn-primary mx-3">show</a>
                    <a href="#" class="btn btn-danger mx-3">delete</a>
                    <a href="#" class="btn btn-success mx-3">edit</a>
                </td>
            </tr>
            {{/each}}
            {{else}}
             {{#if resData}}
            <thead>
            <th>userid</th>
            <th>id</th>
            <th>title</th>
            <th>actions</th>
        </thead>
        <tbody>
            {{#each resData}}
            <tr>
                <td>{{this.id}}</td>
                <td>{{this.userId}}</td>
                <td>{{this.title}}</td>
                <td>
                    <a href="/albums/{{this.id}}" class="btn btn-primary mx-3">show</a>
                    <a href="#" class="btn btn-danger mx-3">delete</a>
                    <a href="#" class="btn btn-success mx-3">edit</a>
                </td>
            </tr>
            {{/each}}
            {{else}}
            <tr class="alert alert-danger"> 
             <td colspan="4" >
               no users
             </td>
            </tr>
            {{/if}}
            {{/if}}
              
        </tbody>
    </table>