{{>header}}
{{>navbar}}
<section class="container">
    <h3 class="text-center text-primary mt-5">Single user</h3>
 <table class="table table-stripped">
        <thead>
            <th>AccNumber ID</th>
            <th>name</th>
            <th>balnace</th>
            <th> last transction</th>
            <th>transction</th>

        </thead>
        <tbody>
            <tr>
                {{#unless user}}
                <tr class="alert alert-danger">
