                <td>
                  <table class="table table-stripped">

                     <tr class="alert alert-primary">
                    <th>transaction </th>
                    <th>value</th>
                    </tr>
                {{#each user.transction}}
                                    <tr>

                <td><b>{{this.type}}</b> </td>
                <td><b>{{this.value}}$$</b> </td> 
                </tr>

                {{/each}}
                 </table>
                 </td>
                {{else}}
                <td>no transctions</td>
                {{/if}}
                    <td><a href="addtransaction/{{user._id}}" class="btn btn-danger mx-3">add transction</a></td>

              {{/unless }}
             

              <tr>
         </tbody>
    </table>